{
  "manifest_version": 3,
  "name": "Calendar all select button",
  "version": "1.0.0",
  "description": "Add a toggle button to select/deselect all calendars at once in Google Calendar.",
  "homepage_url": "https://github.com/type-types/google-calendar-calendar-all-select-button",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Calendar All Select Button"
  },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

